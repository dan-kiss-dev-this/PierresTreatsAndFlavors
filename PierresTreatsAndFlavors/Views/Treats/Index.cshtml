@using PierresTreatsAndFlavors.Models;

<h3>List of Treats</h3>
@if (Model.Count == 0)
{
    <p>No treats added yet</p>
}
else
{
    <ul>
    @foreach (Treat treat in Model)
        {
            <li>
                @Html.ActionLink(@treat.Name, "Details", "Treats", new { id = treat.TreatId})
            </li>
        }
    </ul>
}

@Html.ActionLink("Create a Treat", "Create")